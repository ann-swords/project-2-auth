<style>
    div{
        display: inline-block;
        margin: 0 10px;
    }
    body{
        background-color: antiquewhite;
    }
</style>


<h2>Home</h2>

<!-- Search anime: -->
<form action="/results" method="GET">
    <label for="userSearch">Anime Name:</label>
    <input type="text" id="userSearch" name="searchAnime">
    <button type="submit">Search!</button>
</form>

<!-- Search anime scene by Image -->
<form action="/imageSearchResults" method="get">
    <label for="userSearchImage">Anime Image Url:</label>
    <input type="text" id="userSearchImage" name="searchAnimeImage">
    <button type="submit">Search!</button>
</form>

<h3>seasonal Anime To watch </h3>
<!-- use https://api.jikan.moe/v4/seasons/now To show this season anime. -->
<!-- Shows only 5 seasonal anime -->



<div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        
     

      <%animeRec.forEach((a, index)=>{%>
        <% if(index < 8) {%> 
            <%if(index === 0){%>
            <div class="carousel-item active" data-bs-interval="10000">
                <img src="<%= a.images.jpg.image_url%> " class="d-block w-100" >
                
                <div class="carousel-caption d-none d-md-block">
                    <h5><%=a.title%></h5>
                </div>
            
            </div>
           

        <%} else { %>
            <div class="carousel-item ">
                <img src="<%= a.images.jpg.image_url%> " class="d-block w-100" >
                
                <div class="carousel-caption d-none d-md-block">
                    <h5><%=a.title%></h5>
                </div>
            
            </div>
            <%}%>
            <%}%>
         
    <%})%>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>


    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>

  </div>
 